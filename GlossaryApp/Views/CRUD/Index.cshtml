@model IEnumerable<GlossaryApp.Models.TermModel>
@{ ViewBag.Title = "EDIT or Delete";}
<div class="row">
    <div class="col-6">
        <h1>Edit or Delete Term</h1>
    </div>
    <div class="col-6 text-right">
        <a href=@Url.Action("AddOrEdit","CRUD") class="btn btn-primary">Create New Term</a>
    </div>
</div>
<hr />
@{
    if (Model.Any())
    {
        <table class="table text-center table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Term)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Definition)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Term)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Definition)
                        </td>
                        <td>
                            <a href="@Url.Action("AddOrEdit","CRUD", new { id = item.TermID})" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("Delete","CRUD", new { id = item.TermID })"
                               onclick=" return confirm('Are you sure you want to delete this Term?');"
                               class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    }
    else
    {
        <div class="row">
            <div class="col">
                <p class="card-text">No results found.</p>
            </div>
        </div>
    }
}


@section scripts{
    <script>
        $(function () {
            if ('@TempData["AlertMsg"]' != '')  alert('@TempData["AlertMsg"]');
        })
    </script>
}