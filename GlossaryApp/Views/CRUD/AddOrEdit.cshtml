@model GlossaryApp.Models.TermModel
@{
    ViewBag.Title = "AddOrEdit";
}

@{ string header = (string.IsNullOrWhiteSpace(Model.Term) && string.IsNullOrWhiteSpace(Model.Definition)) ? "Add Term" : "Edit Term";}

<h2>@header</h2>
<hr />
<div class="row justify-content-center">
    <div class="form-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.TermID)
            <div class="form-group">
                @Html.LabelFor(model => model.Term, new { @class = "font-weight-bold" })
                @Html.TextBoxFor(model => model.Term, new { @class = "form-control", placeholder = "Enter Term" })
                <div style="color:red">
                    @Html.ValidationMessageFor(model => model.Term)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Definition, new { @class = "font-weight-bold" })
                @Html.TextAreaFor(model => model.Definition, new { @class = "form-control", placeholder = "Enter Definition", rows = "6"})
                <div style="color:red">
                    @Html.ValidationMessageFor(model => model.Definition)
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-success" />
                <input type="reset" value="Reset" class="btn btn-info" />
            </div>
        }
    </div>
</div>

@section scripts{    @Scripts.Render("~/bundles/jqueryval");}